{
  "name": "chilli",
  "version": "1.0.0",
  "description": "A persomal toolkit achieve common modules again",
  "main": "index.js",
  "keywords": [
    "promise",
    "rollup"
  ],
  "repository": "git@github.com:AsceticBoy/chilli.git",
  "author": "Ascetic <398121373@qq.com>",
  "license": "MIT",
  "files": [
    "lib",
    "bundle"
  ],
  "devDependencies": {
    "chai": "^4.1.2",
    "chalk": "*",
    "coveralls": "^3.0.0",
    "cross-env": "^5.1.1",
    "fs-extra": "^4.0.2",
    "google-closure-compiler-js": "^20170910.0.1",
    "husky": "^0.14.3",
    "lint-staged": "^5.0.0",
    "mocha": "*",
    "nyc": "^11.3.0",
    "prettier": "^1.8.2",
    "promises-aplus-tests": "^2.1.2",
    "rollup": "^0.51.5",
    "rollup-plugin-commonjs": "^8.2.6",
    "rollup-plugin-eslint": "^4.0.0",
    "rollup-plugin-node-resolve": "^3.0.0",
    "rollup-plugin-uglify": "^2.0.1"
  },
  "scripts": {
    "dev": " cross-env NODE_ENV=DEV node ./tools/build/rollup.dev.js",
    "build": "rm -rf ./bundle && cross-env NODE_ENV=PROD node ./tools/build/rollup.prod.js --format:iife",
    "test": "nyc --reporter text mocha test/**/*.test.js --bail --timeout 200 --slow 99999",
    "report": "npm run test && rm -rf ./coverage && nyc report --reporter html",
    "coverage": "npm run test && rm -rf ./coverage && nyc report --reporter lcov | coveralls",
    "precommit": "lint-staged"
  },
  "lint-staged": {
    "{lib, tools, test}/**/*.js": [
      "prettier --trailing-comma es5 --single-quote --with-node-modules --write",
      "git add"
    ]
  }
}
